<div class="container-fluid">
  <div class="text-center">
    <%= image_tag 'logo.jpg', size: "100x100", class: "inline-image" %>
    <h2 class="inline-image">Burning Airlines - Admin</h2>
  </div>
  <nav>
    <%= render partial: 'layouts/nav'%>
  </nav>

<div class="text-center">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Serial no:</strong>
      <%= @airplane.serial_no %>
    </p>

    <p>
      <strong>Row:</strong>
      <%= @airplane.row %>
    </p>

    <p>
      <strong>Column:</strong>
      <%= @airplane.column %>
    </p>

    <%= link_to 'Edit', edit_airplane_path(@airplane) %> |
    <%= link_to 'Back', airplanes_path %>
  </div>

  <footer>
    &copy; 2021 Burning Airlines
  </footer>
</div>
