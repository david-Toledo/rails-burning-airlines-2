<div class="container-fluid">
  <div class="text-center">
    <%= image_tag 'logo.jpg', size: "100x100", class: "inline-image" %>
    <h2 class="inline-image">Burning Airlines - Admin</h2>
  </div>
  <nav>
      <%= render partial: 'layouts/nav'%>
  </nav>

  <div class="text-center table">
    <p id="notice"><%= notice %></p>

    <h1>Flights</h1>

    <table>
      <thead>
        <tr>
          <th>Flight no</th>
          <th>Date</th>
          <th>To</th>
          <th>From</th>
          <th>Airplane</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @flights.each do |flight| %>
          <tr>
            <td><%= flight.flight_no %></td>
            <td><%= flight.date %></td>
            <td><%= flight.to %></td>
            <td><%= flight.from %></td>
            <td><%= flight.airplane_id %></td>
            <td><%= link_to 'Show', flight, class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_flight_path(flight), class: "btn btn-success" %></td>
            <td><%= link_to 'Destroy', flight, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Flight', new_flight_path, class: "btn btn-success" %>
  </div>

  <footer>
    &copy; 2021 Burning Airlines
  </footer>
</div>
